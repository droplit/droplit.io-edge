{
    "projectPath": "projects/{project}",
    "clean": [
        "projects/{project}/lib/**/*"
    ],
    "deepClean": [
        "projects/{project}/lib/**/*",
        "projects/{project}/node_modules/**/*"
    ],
    "tsfiles": [
        "typings/main.d.ts",
        "projects/{project}/src/**/*.ts"
    ],
    "jsFiles": [
        "projects/{project}/src/**/*.js"
    ],
    "resources": [
        "projects/{project}/src/**/*.!(ts|js)"
    ],
    "dest": "projects/{project}/lib/",
    "resourceExtensions": [
        ".md",
        ".npmignore",
        ".json",
        ".js"
    ],
    "sloc_project": [
        "projects/{project}/src/**/*.ts",
        "projects/{project}/src/**/*.json",
        "projects/{project}/node_modules/**/*"
    ],
    "sloc_all": [
        "projects/*/src/**/*.ts",
        "projects/*/src/**/*.json",
        "notes/*",
        "docs/*",
        "*.*"
    ],
    "runtimeFiles": [
        "projects/{project}/src/**/*.js",
        "projects/{project}/src/**/*.json"
    ],
    "edgeDir": "./projects/droplit-edge",
    "packageFiles": [
        "projects/droplit-edge/**/*.*",
        "!projects/droplit-edge/**/*.ts",
        "!projects/droplit-edge/**/*.map",
        "!projects/droplit-edge/**/*.md"
    ]
}